<div class="container">
  <h1 class="mt-5">Add a Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, as: :integer %>
    <%= f.input :content, as: :text %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
  <div class="mt-5"><i class="fa-solid fa-chevron-left"></i> <%= link_to "Go back", restaurant_path(@restaurant) %></div>
</div>
