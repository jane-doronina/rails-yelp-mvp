<div class="container">
  <h1 class="mt-5">Add a new Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
